{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "pretty": true,
    "outDir": "bin"
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    ".github",
    "bin",
    "node_modules",
    "tests",
    "app/**/*.spec.ts"
  ]
}